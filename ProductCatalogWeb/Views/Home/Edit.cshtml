@{
    ViewData["Title"] = "Изменить продукт";
}
@model ProductDto


<form asp-action="Edit">
    <input asp-for="Id" hidden/>
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Изменить продукт</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-3">
                <label asp-for="Name" class="control-label pb-3" style="font-size:20px;"></label>
            </div>
            <div class="col-9 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-3">
                <label asp-for="CategoryId" class="control-label pb-3" style="font-size:20px;"></label>
            </div>
            <div class="col-9 pb-3">
                <select asp-for="CategoryId" class="form-select" asp-items="@ViewBag.CategoryList">
                </select>
            </div>
            <div class="col-3">
                <label asp-for="Description" class="control-label pb-3" style="font-size:20px;"></label>
            </div>
            <div class="col-9 pb-3">
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-3">
                <label asp-for="Price" class="control-label pb-3" style="font-size:20px;"></label>
            </div>
            <div class="col-9 pb-3">
                <input asp-for="Price" class="form-control" value="@Model.Price.ToString("N3")"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-3">
                <label asp-for="GeneralNote" class="control-label pb-3" style="font-size:20px;"></label>
            </div>
            <div class="col-9 pb-3">
                <input asp-for="GeneralNote" class="form-control" />
                <span asp-validation-for="GeneralNote" class="text-danger"></span>
            </div>
            <div class="col-3">
                <label asp-for="SpecialNote" class="control-label pb-3" style="font-size:20px;"></label>
            </div>
            <div class="col-9 pb-3">
                <input asp-for="SpecialNote" class="form-control" />
                <span asp-validation-for="SpecialNote" class="text-danger"></span>
            </div>
            <span class="text-danger text-center p-md-2">@ViewData["error"]</span>
            <div class="col-4 offset-3">
                <a asp-action="Index" class="btn-primary btn form-control ">Назад к списку</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Изменить" class="btn btn-success form-control" />

            </div>

        </div>


        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $.validator.methods.range = function (value, element, param) {
            var globalizedValue = value.replace(",", ".");
            return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
        }

        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
        }
    </script>
}
