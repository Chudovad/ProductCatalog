@{
    ViewData["Title"] = "Изменить категорию";
}
@model CategoryDto

<form asp-action="Edit">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Изменить категорию</h1>
        <hr />
        <input asp-for="Id" hidden/>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label pb-3" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <span class="text-danger text-center p-md-2">@ViewData["error"]</span>
            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control ">Назад к списку</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Изменить" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

